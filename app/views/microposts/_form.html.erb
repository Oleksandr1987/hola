<%= form_with(model: micropost) do |form| %>
  <% if micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(micropost.errors.count, "error") %> prohibited this micropost from being saved:</h2>

      <ul>
        <% micropost.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-input">
    <%= form.text_field :context, placeholder: "Title... " %>
  </div>
<div class="form-input">
  <%= form.text_area :content, placeholder: "Content... " %>

</div>
  <%= form.label "Add file:" %>
  <%= form.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
   <%= form.hidden_field :user_id, value: current_user.id %>
    <button class="form-btn">
        <%= form.submit%>
    </button>
<% end %>

<script type="text/javascript">
$("#micropost_image").bind("change", function() {
  const size_in_megabytes = this.files[0].size/1024/1024;
if (size_in_megabytes > 5) {
  alert("Maximum file size is 5MB. Please choose a smaller file.");
$("#micropost_image").val("");
}
});
</script>
