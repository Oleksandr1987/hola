<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
<h1>
  <strong>Name:</strong>
 <%= gravatar_for @user %>
 <%= @user.name %>
</h1>
    </section>
   </aside>
 </div>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<section class="stats">
<%= render 'shared/stats' %>
</section>
<div class="col-md-8">
    <%= render 'follow_form' if current_user.present? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
              <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
      <% end %>
  </div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
