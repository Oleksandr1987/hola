<div class="main">

<div class="login-form">
         <h3 class="login-form-title login-title">Please, sign in</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="form-input login">
            <div class="input-icon">
            <span class="fa fa-envelope"></span>
            </div>
             <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "Enter email... " %>
         </div>
         <div class="form-input login">

            <div class="input-icon">
             <span class="fa fa-lock"></span>
            </div>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter password... " %>
         </div>
         <% if devise_mapping.rememberable? %>
         <div class="form-checkbox">
             <%= f.check_box :remember_me %>

            <p> Remember me</p>
         </div>
          <% end %>
         <p class="form-recovery"><%= link_to 'Forgot your password?', new_password_path(resource_name), class: 'link-to-text-color' %></p>
         <button class="form-btn">
           <%= f.submit "" %>
            Sign in
         </button>
         <div class="form-account-register">Don`t have account?
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'link-to-text-color' %>
         </div>
         <!-- <% end %> -->
      </div>
      </div>  
