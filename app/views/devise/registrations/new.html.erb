<div class="login-form">
         <h3 class="login-form-title">Sign up</h3>

         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>

         <div class="form-input">
            <div class="input-icon">
             <span class="fa fa-user"></span></div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Enter new name... " %>
         </div>

         <div class="form-input">
            <div class="input-icon">
             <span class="fa fa-envelope"></span>
            </div>
           <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter new email... " %>
         </div>

         <div class="form-input">
            <div class="input-icon">
             <span class="fa fa-lock"></span>
            </div>
             <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter new password... " %>
         </div>

         <div class="form-input">
            <div class="input-icon">
             <span class="fa fa-lock"></span>
             </div>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password... " %>
         </div>

         <button class="form-btn">
             <%= f.submit "" %>
            Sign up
         </button>
         <div class="form-account-register">Already have an account?
          <%= link_to 'Sign in', new_session_path(resource_name), class: 'link-to-text-color' %>
         </div>
          <% end %>
      </div>
